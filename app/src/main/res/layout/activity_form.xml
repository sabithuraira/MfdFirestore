<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.farifam.mfdfirestore.FormActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/prompt_provinsi"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/prov_no"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"/>


                <EditText
                    android:id="@+id/prov_nama"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_name"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/prompt_kabupaten"
                android:textAllCaps="true"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/kab_no"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/kab_nama"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_name"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/prompt_kecamatan"
                android:textAllCaps="true"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/kec_no"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/kec_nama"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_name"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </LinearLayout>






            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/prompt_desa"
                android:textAllCaps="true"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/desa_no"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/desa_nama"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_name"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:visibility="visible" />

            <EditText
                android:id="@+id/blok_sensus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_bs"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/kk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_kk"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/bsbtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_bsbtt"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/muatan_dominan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_muatan_dominan"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/ruta_biasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_ruta_biasa"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/ruta_khusus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_ruta_khusus"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/art_laki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_art_laki"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/art_perempuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_art_perempuan"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:singleLine="true"/>


            <Button
                android:id="@+id/submit"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_submit"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
